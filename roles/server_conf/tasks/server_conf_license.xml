---
#####################################################################################################################
# Configurations for Splunk server.conf
#####################################################################################################################

#####################################################################################################################
# [license]
#####################################################################################################################

# master

- name: Set master_uri
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=license
            option=master_uri
            value={{ splunk_server_conf.license.master_uri }}
            state=present
  when: splunk_server_conf.license.master_uri is defined

- name: Unset master_uri (default)
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=license
            option=master_uri
            state=absent
  when: splunk_server_conf.license.master_uri is undefined
