---
#####################################################################################################################
# Configurations for Splunk server.conf
#####################################################################################################################

#####################################################################################################################
# [shclustering]
#####################################################################################################################

- name: Set mgmt_uri (dynamic)
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=shclustering
            option=mgmt_uri
            value="https://{{ inventory_hostname }}:8089"
            state=present
  when: splunk_server_conf.shclustering.mgmt_uri is defined and
        splunk_server_conf.shclustering.mgmt_uri == "dynamic"
  tags:
    - server_shclustering_mgmt_uri

- name: Set mgmt_uri (static)
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=shclustering
            option=mgmt_uri
            value={{ splunk_server_conf.shclustering.mgmt_uri }}
            state=present
  when: splunk_server_conf.shclustering.mgmt_uri is defined and
        splunk_server_conf.shclustering.mgmt_uri != "dynamic"
  tags:
    - server_shclustering_mgmt_uri

- name: Unset mgmt_uri (default)
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=clustering
            option=master_uri
            state=absent
  when: splunk_server_conf.shclustering.mgmt_uri is undefined
  tags:
    - server_shclustering_mgmt_uri

# replication_factor

- name: Set shclusetering replication_factor
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=shclustering
            option=replication_factor
            value={{ splunk_server_conf.shclustering.replication_factor }}
            state=present
  when: splunk_server_conf.shclustering.replication_factor is defined or
        splunk_server_conf.shclustering.replication_factor != 3
  tags: 
    - server_shclustering_replication_factor
    - test

- name: Unset shclustering replication_factor (default)
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=shclustering
            option=replication_factor
            state=absent
  when: splunk_server_conf.shclustering.replication_factor is undefined or
        splunk_server_conf.shclustering.replication_factor == 3
  tags: 
    - server_shclustering_replication_factor
    - test

