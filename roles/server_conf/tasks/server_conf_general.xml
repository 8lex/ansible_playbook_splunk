---
#####################################################################################################################
# Configurations for Splunk server.conf
#####################################################################################################################

#####################################################################################################################
# [general]
#####################################################################################################################

# site

- name: Set site (dynamic)
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=general
            option=site
            value={{ hostvars[inventory_hostname].splunk_site }}
            state=present
  when: splunk_server_conf.general.site is defined and
        splunk_server_conf.general.site == "dynamic"

- name: Set site (static)
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=general
            option=site
            value={{ splunk_server_conf.general.site }}
            state=present
  when: splunk_server_conf.general.site is defined and
        splunk_server_conf.general.site != "dynamic"

- name: Unset site (default)
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=general
            option=site
            state=absent
  when: splunk_server_conf.general.site is undefined

# trustedIP

- name: Set trustedIP
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=general
            option=trustedIP
            value={{ splunk_server_conf.general.trustedIP }}
            state=present
  when: splunk_server_conf.general.trustedIP is defined

- name: Unset site (default)
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=general
            option=trustedIP
            state=absent
  when: splunk_server_conf.general.trustedIP is undefined

# pass4SymmKey

- name: Set general pass4SymmKey
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=general
            option=pass4SymmKey
            value={{ splunk_server_conf.general.pass4SymmKey }}
            state=present
  when: splunk_server_conf.general.pass4SymmKey is defined

- name: Unset general pass4SymmKey
  ini_file: dest={{ splunk_conf_path }}/server.conf
            section=general
            option=pass4SymmKey
            state=absent
  when: splunk_server_conf.general.pass4SymmKey is undefined
